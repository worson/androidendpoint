<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/sort_nubmer_textview"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/searched_poi_item_number_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left_searched_poi_item_number_size"
        android:text="1、"/>



    <View
        android:id="@+id/searched_poi_item_line"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/color_searched_poi_item_line"
        android:layout_marginRight="@dimen/marin_right_searched_poi_item_line_size"
        android:layout_marginLeft="@dimen/marin_right_searched_poi_item_line_size"
        android:layout_alignBottom="@+id/searched_poi_item_start_navi"
        android:layout_alignTop="@+id/searched_poi_item_start_navi"
        android:layout_toLeftOf="@id/searched_poi_item_start_navi" />

    <LinearLayout
        android:id="@+id/searched_poi_item_title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marin_left_searched_poi_item_title_size"
        android:layout_marginRight="@dimen/marin_right_searched_poi_item_title_size"
        android:layout_toRightOf="@id/sort_nubmer_textview"
        android:layout_toLeftOf="@id/searched_poi_item_line"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/poititle"
            android:singleLine="true"
            android:layout_marginTop="12dp"
            android:paddingBottom="4dp"
            android:textSize="@dimen/searched_poi_item_title_size"
            android:text="西乡路口"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subpoititle"
            android:singleLine="true"
            android:paddingTop="4dp"
            android:layout_marginBottom="12dp"
            android:textSize="@dimen/searched_poi_item_subtitle_size"
            android:text="232路;331路;337路;232路;331路;337路;"/>

    </LinearLayout>


    <TextView
        android:id="@+id/searched_poi_item_start_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_left_searched_poi_item_nave_icon"
        android:drawableTop="@drawable/searched_poi_item_navi_icon"
        android:drawablePadding="4dp"
        android:textSize="@dimen/searched_poi_item_nave_icon_title_size"
        android:textColor="@color/color_searched_poi_item_navi_title"
        android:text="发起导航"/>

</RelativeLayout>
