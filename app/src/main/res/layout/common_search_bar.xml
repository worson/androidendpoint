<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_search_bar_height"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8.0dip"
        android:layout_marginTop="0dip"
        android:background="@drawable/input_edittext_bg">

        <ImageView
            android:id="@id/iv_searchbox_search_magnifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:maxHeight="49dp"
            android:maxWidth="49dp"
            android:padding="5dp"
            android:src="@drawable/common_icon_searchbox_magnifier_2" />

        <TextView
            android:id="@+id/SearchendLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/iv_searchbox_search_magnifier"
            android:gravity="center_vertical"
            android:text="目的地："
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/font_common_title"
            android:visibility="gone" />

        <EditText
            android:id="@id/edittext_searchbox_search_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_searchbox_search_clean"
            android:layout_toRightOf="@id/SearchendLocationText"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:padding="5dp"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textAppearance="@style/CommonSearchboxHomeText"
            android:textColorHint="@color/common_text_color_hint"
            android:textSize="@dimen/common_search_bar_text_size" />

        <ImageView
            android:id="@id/iv_searchbox_search_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:padding="5dp"
            android:src="@drawable/btn_icon_delete" />
    </RelativeLayout>
</LinearLayout>
