<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/plan_route_info_route_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/fontsize_plan_route_info_route_type"
        android:textColor="@color/color_plan_route_info_default"
        android:padding="@dimen/padding_plan_route_info_default"
        tool:text="推荐路线" />
    <TextView
        android:id="@+id/plan_route_info_route_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/fontsize_plan_route_info_route_time"
        android:textColor="@color/color_plan_route_info_time_text"
        android:padding="@dimen/padding_plan_route_info_default"
        tool:text="22min" />
    <TextView
        android:id="@+id/plan_route_info_route_distance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/fontsize_plan_route_info_route_distance"
        android:textColor="@color/color_plan_route_info_default"
        android:padding="@dimen/padding_plan_route_info_default"
        tool:text="7.2km" />

</LinearLayout>